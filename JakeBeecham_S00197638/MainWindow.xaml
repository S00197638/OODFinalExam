<Window x:Class="JakeBeecham_S00197638.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JakeBeecham_S00197638"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" ResizeMode="NoResize" 
        WindowStartupLocation="CenterScreen" Loaded="Window_Loaded">
    
    <Grid>
        <ListBox x:Name="lbxGames" HorizontalAlignment="Left" Height="325" Margin="50,50,0,0" VerticalAlignment="Top" Width="250" SelectionChanged="lbxGames_SelectionChanged"/>
        <TextBlock x:Name="tblkGameDetails" HorizontalAlignment="Right" Height="75" Margin="0,50,200,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="250" Padding="10,25,0,0" FontSize="14"/>
        <TextBlock x:Name="tblkGameDescription" HorizontalAlignment="Right" Height="250" Margin="0,125,50,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="400" Padding="10,10,0,0"/>
    </Grid>
</Window>
